<Window x:Class="RestaurantPOS.MainServer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Main Server" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Header -->
        <Grid Background="#1E88E5" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Main Server - QuickService POS" Foreground="White" FontSize="24"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Left Panel: Server Controls -->
        <StackPanel Background="#F5F5F5" Width="300" VerticalAlignment="Stretch" HorizontalAlignment="Left" Margin="0,60,0,0">
            <Button Content="Start Server" Height="50" Margin="10" FontSize="16" Click="StartServer_Click"/>
            <Button Content="Stop Server" Height="50" Margin="10" FontSize="16" Click="StopServer_Click"/>
            <TextBlock Text="Server Log:" FontSize="18" Margin="10" FontWeight="Bold"/>
            <ScrollViewer Margin="10" Height="300">
                <TextBox Name="ServerLogTextBox" FontSize="14" IsReadOnly="True" TextWrapping="Wrap"/>
            </ScrollViewer>
            <TextBlock Text="Connected Clients: 0" FontSize="16" Margin="10" FontWeight="Bold" Name="ConnectedClientsText"/>
        </StackPanel>

        <!-- Right Panel: Orders Display -->
        <Grid Margin="300,60,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Orders List -->
            <ListBox Name="OrdersListBox" Grid.Row="0" Margin="10" FontSize="16">
                <!-- Example Order -->
                <!-- ListBoxItem Content will be dynamically added -->
            </ListBox>

            <!-- Order Actions -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="10">
                <Button Content="Mark Completed" Height="50" Width="150" Margin="5" FontSize="16" Click="MarkCompleted_Click"/>
                <Button Content="Remove Order" Height="50" Width="150" Margin="5" FontSize="16" Click="RemoveOrder_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
