<Window x:Class="RestaurantPOS.KioskInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Self-Service Kiosk" Height="1024" Width="768"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Header -->
        <Grid Background="#FF5722" Height="80" VerticalAlignment="Top">
            <TextBlock Text="Welcome to QuickService Kiosk" Foreground="White" FontSize="26"
                       VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Menu Categories -->
        <StackPanel Orientation="Horizontal" Background="#F5F5F5" Height="100" VerticalAlignment="Top" Margin="0,80,0,0">
            <Button Content="Drinks" Width="120" Height="80" Margin="5" FontSize="16" Click="CategoryButton_Click"/>
            <Button Content="Meals" Width="120" Height="80" Margin="5" FontSize="16" Click="CategoryButton_Click"/>
            <Button Content="Snacks" Width="120" Height="80" Margin="5" FontSize="16" Click="CategoryButton_Click"/>
            <Button Content="Desserts" Width="120" Height="80" Margin="5" FontSize="16" Click="CategoryButton_Click"/>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Margin="0,180,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Menu Items Panel -->
            <WrapPanel Grid.Column="0" Background="White" Margin="10" Name="MenuItemsPanel">
                <TextBlock Text="Select a category to view items" FontSize="18" FontWeight="Bold" Margin="10"/>
            </WrapPanel>

            <!-- Cart Panel -->
            <Grid Grid.Column="1" Background="#FAFAFA" Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>

                <!-- Cart Items -->
                <ListBox Name="CartItemsListBox" Grid.Row="0" Margin="10">
                    <!-- Example Cart Item -->
                    <ListBoxItem Content="Burger - $5.99"/>
                </ListBox>

                <!-- Cart Summary -->
                <StackPanel Grid.Row="1" Margin="10" Background="LightGray" Padding="10">
                    <TextBlock Text="Subtotal: $0.00" FontSize="16" FontWeight="Bold" Name="SubtotalText"/>
                    <TextBlock Text="Tax: $0.00" FontSize="16" FontWeight="Bold" Name="TaxText"/>
                    <TextBlock Text="Total: $0.00" FontSize="18" FontWeight="Bold" Foreground="DarkGreen" Name="TotalText"/>
                    <Button Content="Checkout" Height="50" FontSize="18" Background="#4CAF50" Foreground="White" Click="CheckoutButton_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
