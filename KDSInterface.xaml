<Window x:Class="RestaurantPOS.KDSInterface"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Kitchen Display System" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <!-- Header -->
        <Grid Background="#1E88E5" Height="60" VerticalAlignment="Top">
            <TextBlock Text="Kitchen Display System" Foreground="White" FontSize="24" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>

        <!-- Orders List -->
        <Grid Margin="0,60,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- Orders Panel -->
            <ListBox Name="lstOrders" Grid.Column="0" Margin="10" FontSize="16">
                <!-- Example Order -->
                <ListBoxItem>
                    <StackPanel>
                        <TextBlock Text="Order ID: 101" FontWeight="Bold"/>
                        <TextBlock Text="Items: Burger, Fries, Coke"/>
                        <TextBlock Text="Status: Pending" Foreground="Red"/>
                    </StackPanel>
                </ListBoxItem>
            </ListBox>

            <!-- Order Actions -->
            <StackPanel Grid.Column="1" Margin="10">
                <Button Content="Mark In Progress" Height="50" Margin="5" FontSize="16" Click="MarkInProgress_Click"/>
                <Button Content="Mark Completed" Height="50" Margin="5" FontSize="16" Click="MarkCompleted_Click"/>
                <Button Content="Refresh Orders" Height="50" Margin="5" FontSize="16" Click="RefreshOrders_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
